<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dark"
    android:orientation="vertical"
    tools:context=".main_page">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="432dp">

        <ImageView
            android:id="@+id/mainphoto"
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/mainphoto" />

        <TextView
            style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/mainphoto"
            android:layout_alignTop="@id/mainphoto"
            android:layout_alignRight="@id/mainphoto"
            android:layout_alignBottom="@id/mainphoto"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:accessibilityLiveRegion="none"
            android:ellipsize="middle"
            android:fadingEdge="none"
            android:fontFamily="@font/coustard"
            android:gravity="center"
            android:text="SDU students learn through contact, not just concepts: firsthand experience,service learning and outreach."
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/coustard"
            android:text="Embark on Your Journey"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/crimson_text"
            android:text="Transform how you think about the world and yourself."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/clicklayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alwaysDrawnWithCache="true"
            android:background="@drawable/sublayout_background"
            android:orientation="vertical"
            android:onClick="clicklayout1">

            <ImageView
                android:id="@+id/slide1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/slide1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/coustard"
                    android:text="GO GLOBAL"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/coustard"
                    android:text="Spend a Semester - or More - at SDU Kaskelen"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/crimson_text"
                    android:text="No matter what your major, at SDU you can have a study abroad experience and stay on track to graduate at approximately the same cost as studying on our SDU campus."
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="@color/colorAccent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alwaysDrawnWithCache="true"
            android:background="@drawable/sublayout_background"
            android:orientation="vertical"
            android:onClick="clicklayout2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/slide2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/coustard"
                    android:text="READY FOR THE REAL WORLD"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/coustard"
                    android:text="Prepare for Success"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/crimson_text"
                    android:text="A SDU education extends beyond the classroom. Through internships, research opportunities and hands-on learning, gain the skills and experience you need to graduate career-ready."
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="@color/colorAccent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alwaysDrawnWithCache="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:onClick="clicklayout3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/slide3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/coustard"
                    android:text="VIRTUAL TOUR"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/coustard"
                    android:text="Explore the SDU campus"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/crimson_text"
                    android:text="Explore SDU’s beautiful campus in Kaskelen city — anytime, from anywhere in the world with our interactive walking tour."
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>

    /* New and Events*/
    <LinearLayout
        android:id="@+id/newsandevents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/coustard"
            android:text="News and Events"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="FEATURED STORY"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <LinearLayout
            android:id="@+id/maxNewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alwaysDrawnWithCache="true"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/maxNew"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/slide1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/coustard"
                android:text="@string/maxnew"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/crimson_text"
                android:text="Whether you are planning your first visit to your SDU or already thinking about coming back, read why coming to campus was key for these current students."
                android:linksClickable="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <HorizontalScrollView
            android:layout_marginTop="30dp"
            android:id="@+id/horizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:scrollbars="none"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/horizontalScroll_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true" >

                <LinearLayout
                    android:id="@+id/lltnews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/percentStarted">

                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:id="@+id/lltnew1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:onClick="newsOnclick">

                        <TextView
                            android:id="@+id/tvnew1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/coustard"
                            android:text="NEWS"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/imgnew1"
                            android:layout_width="280dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/coustard"
                            android:text="Educational project on MIT standards in the field of IT is held in the SDU"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:id="@+id/lltnew2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:onClick="newsOnclick">

                        <TextView
                            android:id="@+id/tvnew2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/coustard"
                            android:text="NEWS"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/imgnew2"
                            android:layout_width="280dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/coustard"
                            android:text="3rd place in the National Innovation Contest"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:id="@+id/lltnew3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:onClick="newsOnclick">

                        <TextView
                            android:id="@+id/tvnew3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/coustard"
                            android:text="NEWS"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/imgnew3"
                            android:layout_width="280dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/coustard"
                            android:text="Mobile app for children Zhanuar 4D developed by our startups"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:id="@+id/lltnew4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:onClick="newsOnclick">

                        <TextView
                            android:id="@+id/tvnew4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/coustard"
                            android:text="NEWS"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/imgnew4"
                            android:layout_width="280dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/new4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/coustard"
                            android:text="Undergraduates of the SDU participate in the international conference 'Science and Society'"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
        /*Line under news and events*/
        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/darkgray" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="UPCOMING EVENTS"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        /*Upcoming events*/
        <LinearLayout
            android:background="@color/white"
            android:layout_margin="20dp"
            android:id="@+id/upcomingevent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="02/13"
                android:textColor="@color/darkgray"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="Event1"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_margin="20dp"
            android:id="@+id/upcomingevent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="02/13"
                android:textColor="@color/darkgray"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="Event2"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_margin="20dp"
            android:id="@+id/upcomingevent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="02/13"
                android:textColor="@color/darkgray"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="Event3"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    /*Footer layout*/



</LinearLayout>