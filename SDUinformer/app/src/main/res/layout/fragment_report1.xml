<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Report1"
    android:id="@+id/child_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="432dp">

            <ImageView
                android:id="@+id/report1main"
                android:layout_width="match_parent"
                android:layout_height="432dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/report1main" />

            <TextView
                android:id="@+id/textonreport1"
                style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:accessibilityLiveRegion="none"
                android:ellipsize="middle"
                android:fadingEdge="none"
                android:fontFamily="@font/coustard"
                android:gravity="center"
                android:paddingTop="300dp"
                android:text="SDU + Kaskelen = Your SDU Experience"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/coustard"
                android:text="At Suleyman Demirel University, we make a study abroad experience accessible for every eligible undergraduate student."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/crimson_text"
                android:text="Unlike many other Kazakhstan universities, we don’t just have a study abroad program (although you can choose from 50+ traditional study abroad options while at SDU) — we’ve had an international campus in Kaskelen, for more than 20 years.\n\nThat means Suleyman Demilrel students, no matter what their undergraduate major, are able to have a study abroad experience while staying on track to graduate on time at approximately the same cost as studying on our SDU campus.
\n\nIn this way, hundreds of SDUdents each year broaden their worldview and increase their employment prospects after graduation, all without sacrificing access to vital student support services, English language instruction or SDU’s world-class faculty.\n\nSee what SDU offers that no one else can."
                android:textColor="@color/black"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/coustard"
                    android:text="In this section"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_alignParentLeft="true"
                    android:layout_toRightOf="@+id/the_first_one"
                    android:paddingRight="10dip"/>
                <ImageView
                    android:id="@+id/the_first_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bottom" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/coustard"
                android:text="QUICK FACTS ABOUT STUDYING IN MADRID"
                android:textColor="@color/black"
                android:textSize="15sp"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/crimson_text"
                    android:text="You can complete requirements for all of Saint Louis University’s nearly 100 degree programs at SLU-Madrid, including nursing, engineering and pre-med options.
\n\nSLU’s Madrid Campus features newly renovated, historically protected buildings and is located in a safe, quiet neighborhood within minutes of the city center.
\n\nStudents studying at SLU-Madrid most often live with Spanish host families, although other options are available.
\n\nMany academic courses at SLU-Madrid incorporate study trips to destinations in Spain and Europe.
SLU-Madrid’s Office of Student Life also sponsors day and weekend excursions. "
                    android:textColor="@color/black"
                    android:textSize="18sp" />





        </LinearLayout>


    </LinearLayout>

